{
  "name": "@maticnetwork/maticjs",
  "version": "2.0.0-beta.0",
  "description": "Javascript developer library for interacting with Matic Network",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/matic.umd.js",
  "react-native": "dist/matic.node.js",
  "files": [
    "lib",
    "dist",
    "artifacts",
    "types"
  ],
  "scripts": {
    "clean": "rimraf lib dist",
    "build:babel": "babel src/ --out-dir lib/",
    "build:webpack": "webpack --env build",
    "build:legacy": "npm run lint && npm run clean && npm run build:babel && npm run build:webpack",
    "build": "tsc",
    "lint": "eslint --ext .js src test examples",
    "test": "mocha --require @babel/register --colors ./test/**/*.spec.js",
    "test:watch": "mocha --require @babel/register --colors -w ./test/**/*.spec.js",
    "test:ci": "scripts/run-test.sh",
    "testrpc": "ganache-cli --mnemonic 'clock radar mass judge dismiss just intact mind resemble fringe diary casino' --gasLimit 13000000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maticnetwork/matic.js.git"
  },
  "keywords": [
    "ethereum",
    "web3",
    "ethers",
    "matic"
  ],
  "author": "Jaynti Kanani <jd@matic.network>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maticnetwork/matic.js/issues"
  },
  "homepage": "https://github.com/maticnetwork/matic.js#readme",
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/bn.js": "4.11.5",
    "@types/web3": "1.0.19",
    "bluebird": "^3.7.1",
    "bn.js": "5.0.0",
    "ethereumjs-block": "2.2.0",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "5.2.0",
    "isomorphic-fetch": "2.2.1",
    "matic-protocol": "github:atvanguard/contracts#d8cf2444713af700de6030fd4721a430fe36f28d",
    "merkle-patricia-tree": "2.3.2",
    "query-string": "6.8.1",
    "web3": "1.2.1",
    "web3-providers-ws": "1.2.4"
  },
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "babel-loader": "8.0.6",
    "chai": "3.5.0",
    "eslint": "5.16.0",
    "eslint-loader": "2.1.2",
    "eth-lib": "0.2.7",
    "ganache-cli": "6.4.4",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "mocha": "5.2.0",
    "rimraf": "2.6.3",
    "typescript": "^3.6.3",
    "webpack": "4.35.0",
    "webpack-cli": "3.3.4",
    "yargs": "8.0.2"
  },
  "browserslist": [
    "> 1%",
    "node 8",
    "not dead"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix src test",
        "git add"
      ]
    },
    "ignore": [
      "dist",
      "lib"
    ]
  }
}
