{
  "name": "maticjs",
  "version": "1.0.0-beta.3",
  "description": "Javascript developer library for interacting with Matic Network",
  "main": "dist/matic.umd.js",
  "module": "dist/matic.esm.js",
  "files": [
    "lib",
    "dist",
    "artifacts"
  ],
  "scripts": {
    "clean": "rimraf lib dist",
    "build:babel": "babel src/ --out-dir lib/",
    "build:webpack": "webpack --env build",
    "build:rollup:": "npm run clean && rollup --config build/rollup.config.js",
    "build": "npm run lint && npm run clean && npm run build:babel && npm run build:webpack",
    "lint": "eslint --ext .js src test",
    "test": "mocha --require @babel/register --colors ./test/**/*.spec.js",
    "test:watch": "mocha --require @babel/register --colors -w ./test/**/*.spec.js",
    "test:ci": "scripts/run-test.sh",
    "testrpc": "ganache-cli --mnemonic 'clock radar mass judge dismiss just intact mind resemble fringe diary casino' --gasLimit 13000000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maticnetwork/matic.js.git"
  },
  "keywords": [
    "ethereum",
    "web3",
    "matic"
  ],
  "author": "Jaynti Kanani <jd@matic.network>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maticnetwork/matic.js/issues"
  },
  "homepage": "https://github.com/maticnetwork/matic.js#readme",
  "config": {
    "mnemonics": "clock radar mass judge dismiss just intact mind resemble fringe diary casino"
  },
  "dependencies": {
    "@babel/polyfill": "7.0.0",
    "@babel/runtime": "7.1.2",
    "ethereumjs-block": "2.0.1",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "6.0.0",
    "ethers": "4.0.4",
    "isomorphic-fetch": "2.2.1",
    "merkle-patricia-tree": "2.3.2",
    "query-string": "6.2.0",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "@babel/cli": "7.1.2",
    "@babel/core": "7.1.2",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "chai": "3.5.0",
    "eslint": "5.6.1",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "ganache-cli": "6.1.8",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "mocha": "5.2.0",
    "rimraf": "2.6.2",
    "rollup": "0.66.6",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-eslint": "5.0.0",
    "rollup-plugin-filesize": "4.0.1",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "3.4.0",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2",
    "yargs": "8.0.2"
  },
  "browserslist": [
    "> 1%",
    "node 8",
    "not dead"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix src test",
        "git add"
      ]
    },
    "ignore": [
      "dist",
      "lib"
    ]
  }
}
