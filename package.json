{
  "name": "@maticnetwork/matic.js",
  "version": "0.0.1-beta.1",
  "description": "Javascript developer library for interacting with Matic Network",
  "main": "index.js",
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run lint && npm run clean && babel src/ --out-dir lib/ && npm run pack",
    "lint": "eslint src/**/*.js",
    "test": "mocha --require @babel/register --colors ./test/**/*.spec.js",
    "test:watch": "mocha --require @babel/register --colors -w ./test/**/*.spec.js",
    "pack": "webpack && webpack --env build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maticnetwork/matic.js.git"
  },
  "keywords": [
    "ethereum",
    "web3",
    "ethers",
    "matic"
  ],
  "author": "Jaynti Kanani <jd@matic.network>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maticnetwork/matic.js/issues"
  },
  "homepage": "https://github.com/maticnetwork/matic.js#readme",
  "dependencies": {
    "@babel/polyfill": "7.0.0",
    "ethereumjs-block": "^2.0.1",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^5.2.0",
    "ethers": "^4.0.0",
    "merkle-patricia-tree": "^2.3.2",
    "query-string": "^6.1.0",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "@babel/cli": "7.1.0",
    "@babel/core": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "chai": "3.5.0",
    "eslint": "5.6.0",
    "eslint-config-standard": "12.0.0",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "4.0.1",
    "mocha": "3.3.0",
    "webpack": "4.1.0",
    "webpack-cli": "2.0.10",
    "yargs": "8.0.2"
  }
}
