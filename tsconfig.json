{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2015", "dom"],
    "target": "es5",
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
